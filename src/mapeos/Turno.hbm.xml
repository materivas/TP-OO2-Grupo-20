<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   	<class name="datos.Turno" table="turno">
    <id name="idTurno" column="id_turno">
      <generator class="identity"/>
    </id>
    
	<property name="fechaHora" column="fecha_hora" type="timestamp"/>

    <one-to-one name="detalle" class="datos.Detalle"/>
	<many-to-one name="cliente" class="datos.Cliente" column="id_cliente"/>
	<many-to-one name="empleado" class="datos.Empleado" column="id_empleado"/>	
	<many-to-one name="servicio" class="datos.Servicio" column="id_servicio"/>
  </class>
</hibernate-mapping>

